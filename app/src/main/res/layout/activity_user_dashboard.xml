<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Dashboard">

    <!-- Heading Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/haeading_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/BackgroundColor"
        android:padding="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/StrokeColor"
        app:strokeWidth="4dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/dashboard_heading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/editext_background"
            android:backgroundTint="@color/BackgroundColor"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="User's Dashboard"
            android:textColor="@color/TextColor"
            android:textSize="25sp"
            app:fontFamily="@font/montserratbold" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Chart Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/chart_layout"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_margin="20dp"
        android:padding="15dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/haeading_layout"
        app:strokeColor="@color/StrokeColor"
        app:strokeWidth="5dp">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- RecyclerView Table Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/expenselistlayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/chart_layout"
      app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/expense_header_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/expense_total_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="@color/TextColor"
                android:textSize="16sp"
                android:fontFamily="@font/montserratbold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/expense_total_value" />

            <TextView
                android:id="@+id/expense_total_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0.00"
                android:textColor="@color/HeadingColor"
                android:textSize="16sp"
                android:fontFamily="@font/robotobold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@id/expense_total_label" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/expense_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:clipToPadding="false"
            android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/expense_header_row"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_expense_table" />
    </com.google.android.material.card.MaterialCardView>

    <include
        layout="@layout/activity_bottom_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
