<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Category_Page">

    <!-- Back (Lottie) -->

    <!-- Heading -->
    <TextView
        android:id="@+id/category_page_heading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your Expenses"
        android:textSize="22sp"
        android:fontFamily="@font/montserratbold"
        android:textColor="@color/TextColor"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Category Dropdown -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/category_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:hint="Category"
        android:backgroundTint="@color/ButtonColor"
        app:boxStrokeColor="@color/StrokeColor"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:endIconDrawable="@drawable/outline_arrow_drop_down_24"
        app:endIconTint="@color/TextColor"
        app:layout_constraintTop_toBottomOf="@id/category_page_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sort_layout">

        <AutoCompleteTextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:cursorVisible="false"
            android:padding="8dp"
            android:textColor="@color/TextColor"
            android:fontFamily="@font/robotomedium" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Sort Dropdown -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sort_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Sort by"
        android:backgroundTint="@color/ButtonColor"
        app:boxStrokeColor="@color/StrokeColor"
        app:boxStrokeWidth="2dp"
        app:boxCornerRadiusTopStart="20dp"
        app:endIconDrawable="@drawable/outline_arrow_drop_down_24"
        app:endIconTint="@color/TextColor"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusBottomEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/category_page_heading"
        app:layout_constraintStart_toEndOf="@id/category_layout"
        app:layout_constraintEnd_toEndOf="parent">

        <AutoCompleteTextView
            android:id="@+id/sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:focusable="false"
            android:cursorVisible="false"
            android:padding="8dp"
            android:textColor="@color/TextColor"
            android:fontFamily="@font/robotomedium" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- List container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/category_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:clipToPadding="false"
            android:paddingHorizontal="14dp"
            android:paddingVertical="12dp" />
    </com.google.android.material.card.MaterialCardView>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/emptyLottie"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:visibility="gone"
        app:lottie_fileName="noresultfound.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="@id/content_container"
        app:layout_constraintBottom_toBottomOf="@id/content_container"
        app:layout_constraintStart_toStartOf="@id/content_container"
        app:layout_constraintEnd_toEndOf="@id/content_container"/>
    <include
        layout="@layout/activity_bottom_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
